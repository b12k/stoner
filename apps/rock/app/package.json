{
  "name": "@stoner/rock-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd --silent -x next dev -p $ROCK_APP_PORT",
    "build": "next build",
    "docker-build": "env-cmd -x docker build $CONTEXT --file=$DOCKERFILE --tag=$APP_NAME --build-arg=APP_NAME=$APP_NAME",
    "docker-build-ci": "env-cmd -x docker build $CONTEXT --file=$DOCKERFILE --tag=$APP_NAME --build-arg=APP_NAME=$APP_NAME --build-arg=BUILDKIT_INLINE_CACHE=1 --cache-from=localhost:5000/$APP_NAME ",
    "#docker-build": "cd ../../../ && docker build . -f infrastructure/docker/Dockerfile -t stoner/rock-app --build-arg NAME=stoner/rock-app",
    "#docker-build-ci": "cd ../../../ && docker build . -f infrastructure/docker/Dockerfile -t stoner/rock-app --build-arg NAME=stoner/rock-app --cache-from=localhost:5000/stoner/rock-app --build-arg BUILDKIT_INLINE_CACHE=1",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@stoner/ui-kit": "*",
    "next": "12.0.9",
    "next-transpile-modules": "9.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@stoner/eslint-config": "*",
    "@stoner/ts-config": "*",
    "@types/node": "17.0.13",
    "@types/react": "17.0.38",
    "env-cmd": "10.1.0",
    "eslint": "8.8.0",
    "typescript": "4.5.5"
  }
}
